@inject SignInManager<AppUser> signInManager

<ul class="navbar-nav ms-auto">
	@if (signInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
				<i class="bi bi-box-arrow-right"></i>
			</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Đăng nhập</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Đăng ký</a>
		</li>
	}
</ul>