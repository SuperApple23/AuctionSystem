@model ProductEditViewModel

@{
	ViewData["Title"] = "Sửa vật phẩm";
}

<h3>Sửa vật phẩm</h3>
<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
	<input hidden asp-for="ExistingMainImage" />
	<div class="row mb-4">
		<div class="col-md-5">
			<div class="mb-3">
				<label asp-for="ProductId" class="form-label">Mã vật phẩm</label>
				<input asp-for="ProductId" class="form-control" readonly />
				<span asp-validation-for="ProductId" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="ProductName" class="form-label">Tên vật phẩm</label>
				<input asp-for="ProductName" class="form-control" />
				<span asp-validation-for="ProductName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="ListedPrice" class="form-label">Giá niêm yết</label>
				<input asp-for="ListedPrice" class="form-control" />
				<span asp-validation-for="ListedPrice" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Quantity" class="form-label">Số lượng</label>
				<input asp-for="Quantity" class="form-control" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StatusId" class="form-label"></label>
				<select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
			</div>
		</div>
		<div class="col-md-5">
			<div>
				<label asp-for="Description" class="form-label">Mô tả</label>
				<textarea asp-for="Description" class="form-control" style="resize:none;height:150px"></textarea>
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Sửa</button>
	<a asp-action="Index" class="btn btn-secondary">Trở về</a>

</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}